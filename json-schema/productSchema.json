{
  // the json-schema standard this schema adheres to,
  // the schema's schema
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  // uri for this schema
  "$id": "https://example.com/productSchema.json",
  // annotations to state the intent of this schema
  "title": "Product",
  "description": "A product in the catalog",
  // validation keyword: specifies that the data must be a JSON object
  "type": "object",
  "required": ["productId", "productName", "price"],
  // another validation keyword: top properties for the json data (to be validated)
  "properties": {
    "productId": {
      "description": "The unique identifier for a product",
      "type": "integer"
    },
    "productName": {
      "descriptionq": "Name of the product",
      "type": "string"
    },
    "price": {
      "description": "The price of the product",
      "type": "number",
      "exclusiveMinimum": 0
    },
    // tags are optional
    "tags": {
      "description": "Tags for the product",
      "type": "array",
      // for what should be in the array
      "items": {
        "type": "string"
      },
      // at least one tag is required
      "minItems": 1,
      "uniqueItems": true
    },
    "dimensions": {
      "description": "The external sizes of the product",
      "type": "object",
      "properties": {
        "length": {
          "type": "number"
        },
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "required": ["length", "width", "height"]
      }
    },
    "warehouseLocation": {
      "description": "Coordinates of the warehouse where the product is located.",
      // reference to external schema
      "$ref": "geolocationSchema.json"
    },
    "warehouseAddress": {
      // reference to inlined schema
      "$ref": "#/$defs/address"
    }
  },
  "$defs": {
    "address": {
      "description": "The physical address of the warehouse",
      "type": "object",
      "properties": {
        "streetAddress": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string",
          "pattern": "^[A-Z]{2}$",
          "default": "WA"
        },
        "zipcode": {
          "type": "string"
        }
      },
      "required": ["streetAddress", "city", "state", "zipcode"]
    }
  }
}
