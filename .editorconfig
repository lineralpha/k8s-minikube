root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

# trailing spaces in markdown indicate word wrap
[*.md]
trim_trailing_whitespace = false
max_line_length = 100
